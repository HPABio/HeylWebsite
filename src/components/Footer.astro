---
import { Image } from 'astro:assets';
import HWELogoV2NoText from "@images/HWE-LogoV2-noText.svg";
import GimmeldingenMap from "@images/GimmeldingenMap.jpg";
import footerLinks from '/public/information/footer-links.md';
---

<footer id="footer" class="bg-gradient-to-b from-white to-gray-50 border-t border-gray-200 relative"
style={{backgroundImage: `url("${GimmeldingenMap.src}")`, backgroundSize: 'cover', backgroundPosition: 'center'}}>
<div class="inset-0 bg-gradient-to-b from-slate-100 via-slate-200/70 to-transparent ">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 overflow-hidden">
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-x-32 md:gap-x-8 gap-y-14 px-14 lg:px-0">
      
      <!-- Company Info -->
      <div class="lg:col-span-1 row-start-1 flex flex-col justify-end lg:justify-between items-start ">
        <img src={HWELogoV2NoText.src} alt="Heyl Weinerlebnistouren Logo" class="h-12 w-auto mr-3 sm:hidden">
        <div class="flex items-center mb-4">
          <img src={HWELogoV2NoText.src} alt="Heyl Weinerlebnistouren Logo" class="h-12 w-auto mr-3 hidden sm:block">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Heyl Weinerlebnistouren</h3>
            <p class="text-sm text-gray-600">Geführte Wein-Erlebnistouren</p>
          </div>
        </div>
        <div class="flex flex-col justify-between">
        <p class="text-sm text-gray-600 mb-4 hidden sm:block max-w-sm lg:max-w-none">
          Entdecken Sie die Pfalz mit professionellen Wein-Erlebnistouren durch die schönsten Weinberge und Weingüter.
        </p>
        <div class="flex space-x-4">
          <a href="mailto:info@heyl-weintouren.de" class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
          </a>
          <a href="tel:+49123456789" class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
          </a>
        </div>
      </div>
      </div>

      <!-- Navigation Links -->
      <div class="lg:col-span-1 row-start-2 md:row-start-1 pt-0 sm:pt-4 md:pt-0 md:ml-14 sm:mt-0 mt-10">
        <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-2 sm:mb-4">Navigation</h3>
        <ul class="lg:space-y-1 space-y-0 text-xs leading-snug sm:leading-tight sm:text-sm">
          <li><a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Startseite</a></li>
          <li><a href="/tours" class="text-gray-600 hover:text-gray-900 transition-colors">Touren</a></li>
          <li><a href="/gruppen" class="text-gray-600 hover:text-gray-900 transition-colors">Gruppen</a></li>
          <li><a href="/#about-me" class="text-gray-600 hover:text-gray-900 transition-colors">Über mich</a></li>
          <li><a href="/weingueter" class="text-gray-600 hover:text-gray-900 transition-colors">Weingüter</a></li>
          <!-- <li><a href="/impressum" class="text-gray-600 hover:text-gray-900 transition-colors">Impressum</a></li> -->
          <!-- <li><a href="/datenschutz" class="text-gray-600 hover:text-gray-900 transition-colors">Datenschutz</a></li> -->
          <!-- <li><a href="/newsletter" class=" text-gray-600 hover:text-gray-900 transition-colors">Newsletter</a></li> -->
          <!-- <li><a href="/barrierefreiheit" class="text-gray-600 hover:text-gray-900 transition-colors">Erklärung zur Barrierefreiheit</a></li> -->
        </ul>
      </div>

      <!-- Collaborators -->
      <div class="lg:col-span-1 row-start-2 md:row-start-1 sm:mt-0 mt-10">
        <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-2 sm:mb-4">Partner</h3>
        <ul class="lg:space-y-1 space-y-0 text-xs leading-snug sm:leading-tight sm:text-sm">
          <li><a href="https://www.neustadt.eu/" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-900 transition-colors">Tourist-Info Neustadt</a></li>
          <li><a href="http://www.gimmeldingen.de/" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-900 transition-colors">Gimmeldingen</a></li>
          <li><a href="https://www.kultur-und-weinbotschafter.de/pfalz" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-900 transition-colors">Kultur-und Weinbotschafter Pfalz</a></li>
          <li><a href="https://www.mandelbluete-pfalz.de/" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-900 transition-colors">Pfälzer Mandelblüte</a></li>
          <li><a href="https://www.pfalz.de/de" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-900 transition-colors">Zum Wohl die Pfalz</a></li>
        </ul>
      </div>
    </div>
    <div class="border-b border-gray-300 h-1 w-[70%] mx-auto mt-4 sm:mt-0 sm:my-8"/>
    <!-- Bottom Section -->
    <div class="pt-8 px-10">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-sm text-gray-500 mb-4 md:mb-0 text-center md:text-left">
          &copy; 2024 Brigitta Heyl –<br class="md:hidden"/> Geführte Wein-Erlebnistouren. <br class="sm:hidden"/> Alle Rechte vorbehalten.
        </p>
        <div class="flex space-x-6">
          <a href="/kontakt" class="text-sm text-gray-500 hover:text-gray-700 transition-colors">Kontakt</a>
          <a href="/impressum" class="text-sm text-gray-500 hover:text-gray-700 transition-colors">Impressum</a>
          <a href="/datenschutz" class="text-sm text-gray-500 hover:text-gray-700 transition-colors">Datenschutz</a>
          <!-- <a href="/barrierefreiheit" class=" text-sm text-gray-500 hover:text-gray-700 transition-colors">Barrierefreiheit</a> -->
        </div>
      </div>
    </div>
  </div>
</div>
</footer> 