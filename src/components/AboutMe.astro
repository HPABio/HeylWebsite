---
const { className } = Astro.props;
import AboutMeVertical from '@/components/AboutMeVertical.astro';
import AboutMeHorizontal from '@/components/AboutMeHorizontal.astro';
import GetInTouch from '@/components/GetInTouch.astro';
---

<section id="about-me" class={`relative w-screen px-10 sm:px-0 bg-white ${className} `}>
  <div class="absolute inset-0 z-0 opacity-1" style={{
    background: "url(https://www.toptal.com/designers/subtlepatterns/uploads/seamless_paper_texture.png)",
    backgroundSize: "15%",
    backgroundRepeat: "repeat",
  }}></div>

  <AboutMeVertical className="block lg:hidden pt-24 sm:pt-32" />
  <AboutMeHorizontal className="hidden lg:block pt-24 sm:pt-32" />
  <GetInTouch className="md:col-start-1 md:col-span-2 md:row-start-5 md:row-span-1 mx-auto max-w-sm md:max-w-xl xl:max-w-2xl" />

</section> 