---
const { className } = Astro.props;
import AboutMeVertical from '@/components/AboutMeVertical.astro';
import AboutMeHorizontal from '@/components/AboutMeHorizontal.astro';
import GetInTouch from '@/components/GetInTouch.astro';
---

<section id="about-me" class={`relative w-screen  mx-auto bg-white pb-28 ${className} overflow-x-clip `}>
  <div class="absolute top-0 left-[50%] translate-x-[-50%] h-full w-[100%] min-w-[2000px] z-0 opacity-1" style={{
    background: "url(https://www.toptal.com/designers/subtlepatterns/uploads/seamless_paper_texture.png)",
    backgroundSize: "15%",
    backgroundRepeat: "repeat",
  }}></div>

  <AboutMeVertical className="block lg:hidden pt-44 md:pt-10" />
  <AboutMeHorizontal className="hidden lg:block pt-12 z-10 px-14" />
  <!-- Playful Baroque Section Divider -->
  <div class="hidden lg:flex relative w-full justify-center items-center mt-60 z-0">
    <svg class="w-3/4 h-20 text-text/40" fill="currentColor" viewBox="0 0 300 80">
      <!-- Main curly flourish -->
      <path d="M30 40 Q60 15, 90 40 Q120 65, 150 40 Q180 15, 210 40 Q240 65, 270 40" 
            stroke="currentColor" 
            stroke-width="2.5" 
            fill="none" 
            stroke-linecap="round"/>
      
      <!-- Central baroque ornament - made larger and more visible -->
      <path d="M150 40 Q140 25, 130 35 Q140 45, 150 35 Q160 45, 170 35 Q160 25, 150 40" 
            fill="currentColor" 
            opacity="0"/>
      
      <!-- Side flourishes - made larger -->
      <path d="M30 40 Q20 30, 10 40 Q20 50, 30 40" 
            stroke="currentColor" 
            stroke-width="3" 
            fill="none"/>
      <path d="M270 40 Q280 30, 290 40 Q280 50, 270 40" 
            stroke="currentColor" 
            stroke-width="3" 
            fill="none"/>
      
    </svg>
  </div>
  <p class="w-full relative hidden xl:block text-6xl text-center -mt-12">
    <span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 
    grayscale text-stone-100 pt-8">ðŸŒ¸</span>
    <span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2
     bg-accent1 opacity-85 text-transparent bg-clip-text pt-8">ðŸŒ¸</span>
  </p> 
  <GetInTouch className="hidden md:block md:col-start-1 md:col-span-2 md:row-start-5 md:row-span-1 mx-auto sm:max-w-sm md:max-w-xl xl:max-w-2xl mt-24 md:mt-0 lg:mt-44 z-0" />
</section> 