---
// This runs on the server at build time
import InteractiveToursClient from './InteractiveToursClient';

const tourSlugs = [
  "mandelbluete-meerspinne-und-monarchen",
  "magische-momente-am-mussbach-nachhaltige-weinwanderung", 
  "Von-Bacchus-bis-Christophorus",
  "gluehwein-geheimnisvolles-gimmeldingen"
];

const tourData = await Promise.all(
  tourSlugs.map(async (slug) => {
    try {
      const response = await fetch(
        `http://wordpress-a80wooocckwk0kwg4ow0c4o4.82.29.180.126.sslip.io/wp-json/wp/v2/posts?slug=${slug}`
      );
      const posts = await response.json();
      return posts[0];
    } catch (error) {
      console.error(`Error fetching tour ${slug}:`, error);
      return null;
    }
  })
);

// Process the data exactly like your current component
const processTourContent = (post: any) => {
  if (!post) return { parts: [], title: "", description: "" };
  
  const rawHtml = post.content.rendered;
  const parts = rawHtml.split("\n\n\n\n");
  
  return {
    parts,
    title: post.title.rendered,
    description: parts[0] || ""
  };
};

const tour1 = processTourContent(tourData[0]);
const tour2 = processTourContent(tourData[1]);
const tour3 = processTourContent(tourData[2]);
const tour4 = processTourContent(tourData[3]);

const tours = [
  {
    id: "mandelbluete",
    title: tour1.title,
    description: tour1.description,
    availability: "Fr端hling",
    images: {
      card: "/mj-almondFlowerV1.png",
      background: "/mj-almondFlower-mosaicGlass.png",
      objectPosition: "object-[50%_50%]",
      bgObjectPosition: "object-[50%_36%]",
    },
    longDescription: tour1.parts.slice(1).join("\n\n\n\n"),
  },
  {
    id: "mussbach",
    title: tour2.title,
    description: tour2.description,
    availability: "Sommer",
    images: {
      card: "/Wasserm端hle-im-Wald.png",
      background: "/compressed-mj-wallWithGrapes.png",
      objectPosition: "object-[50%_20%]",
      bgObjectPosition: "object-[50%_36%]",
    },
    longDescription: tour2.parts.slice(1).join("\n\n\n\n"),
  },
  {
    id: "bacchus",
    title: tour3.title,
    description: tour3.description,
    availability: "Fr端hling - Herbst",
    images: {
      card: "/mj-Bachus-mosaicGlass.png",
      background: "/compressed-mj-wallWithGrapes.png",
      objectPosition: "object-[50%_20%]",
      bgObjectPosition: "object-[50%_50%]",
    },
    longDescription: tour3.parts.slice(1).join("\n\n\n\n"),
  },
  {
    id: "gluehwein",
    title: tour4.title,
    description: tour4.description,
    availability: "Winter",
    images: {
      card: "/mj-Gl端hweinV1.png",
      background: "/mj-teaCup.png",
      objectPosition: "object-[50%_35%]",
      bgObjectPosition: "object-center",
    },
    longDescription: tour4.parts[1] || "",
  },
];

// Serialize tours data for client-side use
const toursData = JSON.stringify(tours);
---

<section class="min-h-screen bg-stone-100 text-text">
  <div class="relative w-full h-full bg-stone-100">
    <!-- Tours Grid - thumbnail selection -->
    <div class="grid gap-1 md:gap-2 lg:gap-4 2xl:gap-6 grid-cols-4 sm:grid-cols-4 my-12 mx-auto max-w-[750px] xl:max-w-[900px] 2xl:max-w-[1000px]">
      {tours.map((tour) => (
        <div class="tour-thumbnail cursor-pointer group relative overflow-hidden aspect-[9/16] md:aspect-[2/3] rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border-[2.5px] border-soft-beige/20 brightness-[0.6] saturate-[0.7]" data-tour-id={tour.id}>
          <div class="relative w-full h-full overflow-hidden rounded-2xl">
            <img src={tour.images.card} alt={tour.title} class={`w-full h-full ${tour.images.objectPosition} object-cover group-hover:scale-105 transition-transform duration-300 rounded-2xl overflow-hidden`} />
            <div class="absolute top-3 right-3 bg-stone-200/80 backdrop-blur-sm text-amber-900/90 font-semibold text-[0.2rem] sm:text-[0.5rem] md:text-xs py-1 px-3 rounded-full shadow-sm">
              {tour.availability}
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <h3 class="absolute bottom-4 left-4 text-[0.5rem] sm:text-[0.65rem] sm:leading-tight md:text-sm lg:text-lg font-semibold font-bonanova text-soft-sand">
              {tour.title}
            </h3>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Buttons -->
    <div class="flex justify-center gap-4 max-w-3xl mx-auto pb-4 md:pb-8 -mt-4">
      <a href="https://eveeno.com/de/event-cal/34263?style=grid" class="inline-flex items-center justify-center h-8 sm:h-10 md:h-12 w-24 sm:w-32 md:w-44 xl:w-56 bg-gradient-to-r from-amber-600 to-orange-600 text-white font-semibold text-[0.3rem] sm:text-[0.6rem] md:text-sm xl:text-lg rounded-full shadow-lg hover:from-amber-700 hover:to-orange-700 transform hover:scale-105 transition-all duration-300">
        <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
        TOUR BUCHEN
      </a>
      <a href="/gruppen" class="inline-flex items-center justify-center h-8 sm:h-10 md:h-12 w-32 sm:w-44 md:w-56 xl:w-64 bg-gradient-to-r from-orange-600 to-amber-600 text-white font-semibold text-[0.3rem] sm:text-[0.6rem] md:text-sm xl:text-lg rounded-full shadow-lg hover:from-orange-700 hover:to-amber-700 transform hover:scale-105 transition-all duration-300">
        <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        GRUPPENANGEBOTE
      </a>
    </div>
  </div>
  
  <!-- Client-side interactive component with Framer Motion -->
  <InteractiveToursClient tours={toursData} />
</section>
