---
// src/pages/tours.astro
import '@/styles/global.css';
import InteractiveTours from '@/components/InteractiveTours.tsx';
import ScreenSizeDEVTOOL from '@/components/ScreenSizeDEVTOOL.astro';

import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

// Images
import MJAlmondFlowerV1 from '@images/mj-almondFlowerV1.png';
import MJAlmondFlowerMosaicGlass from '@images/mj-almondFlower-mosaicGlass.png';
import MJBachusMosaicGlass from '@images/mj-Bachus-mosaicGlass.png';
import MJGlühweinV1 from '@images/mj-GlühweinV1.png';
import MJWallWithGrapes from '@images/compressed-mj-wallWithGrapes.png';
import MJTeaCup from '@images/mj-teaCup.png';
import WassermühleImWald from '@images/Wassermühle-im-Wald.png';



// Note: Tour parameter is now read directly in the React component
---

<html lang="de">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Unsere Touren</title>
		<link href="https://fonts.googleapis.com/css2?family=Ballet:opsz@16..72&family=Bodoni+Moda:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&family=Bona+Nova+SC:ital,wght@0,400;0,700;1,400&family=Caveat:wght@400..700&family=DM+Serif+Display:ital@0;1&family=DM+Serif+Text:ital@0;1&family=Gloock&family=Indie+Flower&family=Lusitana:wght@400;700&family=Monsieur+La+Doulaise&family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header isDarkMode={true} isHome={false} />
		<div class="fixed w-full h-[80px]  bg-black -translate-y-[80px] "/>
		<div class="fixed w-full h-[80px]  bg-gradient-to-br from-stone-300/25 via-stone-900/40 to-transparent -translate-y-[80px] "/>
	    <ScreenSizeDEVTOOL />
		<InteractiveTours images={{MJAlmondFlowerV1: MJAlmondFlowerV1.src,
			 MJAlmondFlowerMosaicGlass: MJAlmondFlowerMosaicGlass.src,
			  MJBachusMosaicGlass: MJBachusMosaicGlass.src,
			   MJGlühweinV1: MJGlühweinV1.src,
			    MJWallWithGrapes: MJWallWithGrapes.src,
				 MJTeaCup: MJTeaCup.src,
				  WassermühleImWald: WassermühleImWald.src,}}/>
		<Footer />
	</body>
</html>